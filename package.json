{
  "name": "philips-hue-adapter",
  "display_name": "Philips Hue",
  "version": "0.7.0",
  "description": "Mozilla IoT Philips Hue Adapter. Press the link button on your Hue bridge to pair devices.",
  "main": "index.js",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "philips",
    "hue",
    "philips-hue"
  ],
  "homepage": "https://github.com/mozilla-iot/philips-hue-adapter",
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/philips-hue-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/philips-hue-adapter/issues"
  },
  "dependencies": {
    "color": "^2.0.1",
    "node-persist": "^2.1.0",
    "node-ssdp": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.19.1"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "node_modules",
    "philips-hue-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "usernames": {}
    },
    "schema": {
      "type": "object",
      "properties": {
        "usernames": {
          "type": "object"
        }
      }
    }
  }
}
